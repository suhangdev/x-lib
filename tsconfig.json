{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": "./",
        "types": [
            "webpack-env"
        ],
        "paths": {
            "*": [
                "types/*"
            ],
            "types/*": [
                "types/*"
            ],
            "@/*": [
                "./*"
            ]
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "include": [
        "pages/**/*.ts",
        "pages/**/*.vue",
        "pages/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}
